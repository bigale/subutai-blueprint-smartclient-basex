// 20191020171626
// https://raw.githubusercontent.com/bigale/subutai-blueprint-basex/master/Subutai.json

{
  "name": "${environmentName}",
  "description": "Nextcloud",
  "version": "3.0.0",
  "author": "https://github.com/lbthomsen",
  "ssh-key": "lth",
  "containers": [
    {
      "hostname": "${webContainerName}",
      "template": "debian-stretch",
      "peer-criteria": "HTTP-GROUP",
      "size": "${containerSize}",
      "port-mapping": [
        {
          "protocol": "https",
          "domain": "${domainName}",
          "internal-port": "80",
          "external-port": "443"
        }
      ]
    }
  ],
  "peer-criteria": [
    {
      "name": "HTTP-GROUP"
    }
  ],
  "ansible-configuration": {
    "source-url": "https://github.com/subutai-blueprints/subutai-blueprint-nextcloud/archive/master.zip",
    "ansible-playbook": "site.yml",
    "extra-vars": [
      {
        "key": "domain_name",
        "value": "${domainName}"
      },
      {
        "key": "admin_user",
        "value": "${adminUser}"
      },
      {
        "key": "admin_pwd",
        "value": "${adminPwd}"
      }
    ],
    "groups": [
      {
        "name": "nc",
        "hostnames": [
          "${webContainerName}"
        ]
      }
    ]
  },
  "user-variables": {
    "environmentName": {
      "description": "Enter the environment name",
      "type": "string",
      "default": "nc",
      "validation": "[a-zA-Z0-9]+"
    },
    "domainName": {
      "description": "Enter the application domain name",
      "type": "domain",
      "default": "change.the.domain",
      "validation": "[a-zA-Z0-9]+"
    },
    "adminUser": {
      "description": "Nextcloud admin user",
      "type": "string",
      "default": "admin",
      "validation": "[a-zA-Z0-9]+"
    },
    "adminPwd": {
      "description": "Nextcloud admin password",
      "type": "string",
      "default": "SuperSecret",
      "validation": "[a-zA-Z0-9]+"
    },
    "webContainerName": {
      "description": "Enter the container's hostname",
      "type": "string",
      "default": "nc",
      "validation": "[a-zA-Z0-9]+"
    },
    "containerSize": {
      "description": "Container Size",
      "type": "enum",
      "default": "SMALL",
      "validation": "MEDIUM,LARGE,HUGE"
    }
  }
}
